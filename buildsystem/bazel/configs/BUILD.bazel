load(":configs.bzl", "feature", "sanitizer")

# If the `@violet//buildsystem/bazel/configs:win32_dllexport` is defined, it'll mark
# any APIs as `__declspec(dllexport)` instead of `__declspec(dllimport)`.
feature(
    name = "win32_dllexport",
    build_setting_default = False,
    visibility = ["//visibility:public"],
)

config_setting(
    name = "win32_dllexport_enabled",
    flag_values = {"//buildsystem/bazel/configs:win32_dllexport": "True"},
)

sanitizer(
    name = "asan",
    build_setting_default = False,
    visibility = ["//visibility:public"],
)

config_setting(
