load("//buildsystem/bazel:cc.bzl", "cc_library")

cc_library(
    name = "ip",
    deps = [
        ":addr",
        ":addr_v4",
        ":addr_v6",
    ],
)

cc_library(
    name = "addr",
    hdrs = ["//include/violet/Networking/IP:Addr.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":addr_v4",
        ":addr_v6",
        "//violet",
    ],
)

cc_library(
    name = "addr_v4",
    hdrs = ["//include/violet/Networking/IP:V4.h"],
    visibility = ["//visibility:public"],
    deps = ["//violet"],
)

cc_library(
    name = "addr_v6",
    hdrs = ["//include/violet/Networking/IP:V6.h"],
    visibility = ["//visibility:public"],
    deps = ["//violet"],
)
