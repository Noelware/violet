load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

cc_library(
    name = "io",
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        ":read",
        ":stdio",
        ":write",
    ],
)

cc_library(
    name = "error",
    srcs = select({
        "@platforms//os:linux": ["impl/error/unix.cpp"],
        "@platforms//os:macos": ["impl/error/unix.cpp"],
        "@platforms//os:windows": ["impl/error/windows.cpp"],
        "//conditions:default": ["impl/error/unsupported.cpp"],
    }),
    hdrs = ["Error.h"],
    visibility = ["//visibility:public"],
    deps = [
        "//violet",
        "//violet/container",
        "//violet/support:demangle",
    ],
)

cc_library(
    name = "read",
    hdrs = ["Read.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        "//violet",
        "//violet/container:result",
    ],
)

cc_library(
    name = "write",
    hdrs = ["Write.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        "//violet",
        "//violet/container:result",
    ],
)

cc_library(
    name = "stdio",
    srcs = select({
        "@platforms//os:windows": ["impl/stdio/windows.cpp"],
        "//conditions:default": ["impl/stdio.cpp"],
    }),
    hdrs = ["Stdio.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        ":read",
        ":write",
        "//violet",
        "//violet/container:result",
        "//violet/support:stringref",
    ],
)

cc_test(
    name = "error_test",
    size = "small",
    srcs = ["tests/Error.test.cpp"],
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        "//violet/container:result",
    ],
)
