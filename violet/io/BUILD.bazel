load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

exports_files(
    ["BUILD.bazel"],
    visibility = ["//:__subpackages__"],
)

cc_library(
    name = "error",
    srcs = ["//src/io:error.cc"] + select({
        "@platforms//os:linux": ["//src/io/platform/error:unix.cc"],
        "@platforms//os:macos": ["//src/io/platform/error:unix.cc"],
        "@platforms//os:windows": ["//src/io/platform/error:windows.cc"],
        "//conditions:default": ["//src/io/platform/error:unsupported.cc"],
    }),
    hdrs = ["//include/violet/IO:Error.h"],
    visibility = ["//visibility:public"],
    deps = [
        "//violet",
        "//violet/container:optional",
        "//violet/container:result",
    ],
)

cc_library(
    name = "read",
    srcs = ["//src/io:read.cc"],
    hdrs = ["//include/violet/IO:Read.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        "//violet",
    ],
)

cc_test(
    name = "read_test",
    srcs = ["//tests/io:Read.test.cc"],
    deps = [":read"],
)

cc_library(
    name = "write",
    srcs = ["//src/io:write.cc"],
    hdrs = ["//include/violet/IO:Write.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":error",
        "//violet",
    ],
)

cc_test(
    name = "write_test",
    srcs = ["//tests/io:Write.test.cc"],
    deps = [":write"],
)

cc_library(
    name = "descriptor",
    srcs = select({
        "@platforms//os:linux": ["//src/io/platform/descriptor:unix.cc"],
        "@platforms//os:macos": ["//src/io/platform/descriptor:unix.cc"],
        "@platforms//os:windows": ["//src/io/platform/descriptor:windows.cc"],
        "//conditions:default": ["//src/io/platform/descriptor:unsupported.cc"],
    }),
    hdrs = ["//include/violet/IO:Descriptor.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":read",
        ":write",
        "//violet",
    ],
)
