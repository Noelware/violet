load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

# A "uber" library that contains all base Noelware.Violet.IO.Experimental libraries and code
cc_library(
    name = "uber",
    srcs = ["//:dummy.cc"],
    linkstatic = 0,
    visibility = ["//visibility:public"],
    deps = [
        ":buffered_input_stream",
        ":byte_array_input_stream",
        ":file_input_stream",
        ":input_stream",
        ":stdin_input_stream",
        ":string_input_stream",
    ],
)

cc_library(
    name = "input_stream",
    hdrs = ["//include/violet/IO/Experimental:InputStream.h"],
    visibility = ["//visibility:public"],
    deps = [
        "//violet",
        "//violet/io:error",
    ],
)

cc_test(
    name = "input_stream_read_to_string_test",
    srcs = ["//tests/io/experimental/input:ReadToString.test.cc"],
    deps = [":input_stream"],
)

cc_test(
    name = "input_stream_read_lines_test",
    srcs = ["//tests/io/experimental/input:ReadToString.test.cc"],
    deps = [":input_stream"],
)

cc_library(
    name = "buffered_input_stream",
    srcs = ["//src/io/experimental:buffered.cc"],
    hdrs = ["//include/violet/IO/Experimental:BufferedInputStream.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":input_stream",
        "//violet",
        "//violet/io:error",
    ],
)

cc_test(
    name = "buffered_input_stream_test",
    srcs = ["//tests/io/experimental/input:BufferedInputStream.test.cc"],
    deps = [
        ":buffered_input_stream",
        ":byte_array_input_stream",
    ],
)

cc_library(
    name = "byte_array_input_stream",
    srcs = ["//src/io/experimental/input:bytearray.cc"],
    hdrs = ["//include/violet/IO/Experimental/Input:ByteArrayInputStream.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":input_stream",
        "//violet",
        "//violet/io:error",
    ],
)

cc_test(
    name = "byte_array_input_stream_test",
    srcs = ["//tests/io/experimental/input:ByteArrayInputStream.test.cc"],
    deps = [":byte_array_input_stream"],
)

cc_library(
    name = "file_input_stream",
    srcs = ["//src/io/experimental/input:file.cc"] + select({
        "@platforms//os:linux": ["//src/io/experimental/input/file:unix.cc"],
        "@platforms//os:macos": ["//src/io/experimental/input/file:unix.cc"],
        "@platforms//os:windows": ["//src/io/experimental/input/file:windows.cc"],
        "//conditions:default": ["//src/io/experimental/input/file:unsupported.cc"],
    }),
    hdrs = ["//include/violet/IO/Experimental/Input:FileInputStream.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":input_stream",
        "//violet",
        "//violet/filesystem:file",
        "//violet/io:error",
    ],
)

cc_test(
    name = "file_input_stream_test",
    srcs = ["//tests/io/experimental/input:FileInputStream.test.cc"],
    data = ["//tests/io/experimental/input:runfiles/loveletter.txt"],
    with_gtest_main = False,
    deps = [
        ":file_input_stream",
        "//violet/testing:runfiles",
        "//violet/testing:runfiles_main",
    ],
)

cc_library(
    name = "stdin_input_stream",
    srcs = ["//src/io/experimental/input:stdin.cc"],
    hdrs = ["//include/violet/IO/Experimental/Input:StdinInputStream.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":input_stream",
        "//violet",
        "//violet/io:descriptor",
        "//violet/io:error",
    ],
)

cc_library(
    name = "string_input_stream",
    srcs = ["//src/io/experimental/input:string.cc"],
    hdrs = ["//include/violet/IO/Experimental/Input:StringInputStream.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":input_stream",
        "//violet",
        "//violet/io:descriptor",
        "//violet/io:error",
    ],
)

