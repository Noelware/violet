load("@rules_cc//cc:defs.bzl", "cc_binary")
load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

cc_library(
    name = "stdio",
    srcs = ["impl/stdio.cpp"] + select({
        "@platforms//os:linux": ["impl/stdio/unix.cpp"],
        "@platforms//os:macos": ["impl/stdio/unix.cpp"],
        "@platforms//os:windows": ["impl/stdio/windows.cpp"],
        "//conditions:default": ["impl/subprocess/unsupported.cpp"],
    }),
    hdrs = ["Stdio.h"],
    visibility = ["//visibility:public"],
    deps = [
        "//violet",
        "//violet/io:descriptor",
        "//violet/io:error",
        "//violet/io:read",
        "//violet/io:write",
    ],
)

cc_library(
    name = "subprocess",
    srcs = ["impl/subprocess.cpp"] + select({
        "@platforms//os:linux": ["impl/subprocess/unix.cpp"],
        "@platforms//os:macos": ["impl/subprocess/unix.cpp"],
        "@platforms//os:windows": ["impl/subprocess/windows.cpp"],
        "//conditions:default": ["impl/subprocess/unsupported.cpp"],
    }),
    hdrs = ["Subprocess.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":stdio",
        "//violet",
        "//violet/container:optional",
        "//violet/filesystem:path",
        "//violet/io:error",
        "@abseil-cpp//absl/container:flat_hash_map",
    ],
)

cc_binary(
    name = "helper",
    srcs = ["tests/subprocess_helper.cc"],
    visibility = ["//visibility:private"],
)

cc_test(
    name = "test",
    srcs = select({
        "@platforms//os:linux": ["tests/subprocess/Unix.cpp"],
        "@platforms//os:macos": ["tests/subprocess/Unix.cpp"],
        "@platforms//os:windows": ["tests/subprocess/Windows.cpp"],
        "//conditions:default": ["tests/subprocess/Unsupported.cpp"],
    }),
    data = [":helper"],
    deps = ["@bazel_tools//tools/cpp/runfiles"],
)
