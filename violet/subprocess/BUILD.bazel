load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

exports_files(
    ["BUILD.bazel"],
    visibility = ["//:__subpackages__"],
)

cc_library(
    name = "subprocess",
    srcs = ["//src:subprocess.cc"] + select({
        "@platforms//os:linux": [
            "//src/subprocess:linux.cc",
            "//src/subprocess:unix.cc",
        ],
        "@platforms//os:macos": [
            "//src/subprocess:macos.cc",
            "//src/subprocess:unix.cc",
        ],
        "@platforms//os:windows": ["//src/subprocess:windows.cc"],
        "//conditions:default": ["//src/subprocess:unsupported.cc"],
    }),
    hdrs = ["//include/violet:Subprocess.h"],
    deps = [
        "//violet",
        "//violet/container:optional",
        "//violet/filesystem:path",
        "//violet/io:descriptor",
        "//violet/io:error",
        "//violet/io:read",
        "//violet/io:write",
    ],
)

cc_test(
    name = "subprocess_test",
    srcs = [
        "//tests/subprocess:Subprocess.test.cc",
        "//tests/subprocess:gtest.main.cc",
    ],
    with_gtest_main = False,
    deps = [
        ":subprocess",
        "//tests/helper/runfiles",
    ],
)

cc_test(
    name = "unix_test",
    srcs = [
        "//tests/subprocess:gtest.main.cc",
        "//tests/subprocess/platform:Subprocess.unix.test.cc",
    ],
    target_compatible_with = select({
        "@platforms//os:linux": [],
        "@platforms//os:macos": [],
        "//conditions:default": ["@platforms//:incompatible"],
    }),
    with_gtest_main = False,
    deps = [
        ":subprocess",
        "//tests/helper/runfiles",
    ],
)

cc_test(
    name = "windows_test",
    srcs = [
        "//tests/subprocess:gtest.main.cc",
        "//tests/subprocess/platform:Subprocess.windows.test.cc",
    ],
    target_compatible_with = select({
        "@platforms//os:windows": [],
        "//conditions:default": ["@platforms//:incompatible"],
    }),
    with_gtest_main = False,
    deps = [
        ":subprocess",
        "//tests/helper/runfiles",
    ],
)
