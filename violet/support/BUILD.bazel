load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

exports_files(
    ["BUILD.bazel"],
    visibility = ["//:__subpackages__"],
)

cc_library(
    name = "demangle",
    srcs = ["//src/support:demangle.cc"],
    hdrs = ["//include/violet/Support:Demangle.h"],
    visibility = ["//visibility:public"],
    deps = ["//violet:macros"],
)

cc_library(
    name = "bitflags",
    hdrs = ["//include/violet/Support:Bitflags.h"],
    visibility = ["//visibility:public"],
    deps = ["//violet"],
)

cc_library(
    name = "terminal",
    srcs = ["//src/support:terminal.cc"] + select({
        "@platforms//os:linux": ["//src/support/platform/terminal:unix.cc"],
        "@platforms//os:macos": ["//src/support/platform/terminal:unix.cc"],
        "@platforms//os:windows": ["//src/support/platform/terminal:windows.cc"],
        "//conditions:default": ["//src/support/platform/terminal:unsupported.cc"],
    }),
    hdrs = ["//include/violet/Support:Terminal.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":bitflags",
        "//violet",
        "//violet/io:error",
        "//violet/system",
        "//violet/system:ci",
    ],
)

cc_test(
    name = "terminal_test",
    srcs = ["//tests/support:Terminal.test.cc"],
    deps = [":terminal"],
)
