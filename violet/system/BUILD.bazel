load("//buildsystem/bazel:cc.bzl", "cc_library")

cc_library(
    name = "system",
    srcs = select({
        "@platforms//os:linux": ["//src/system/platform:unix.cc"],
        "@platforms//os:macos": ["//src/system/platform:unix.cc"],
        "@platforms//os:windows": ["//src/system/platform:windows.cc"],
        "//conditions:default": ["//src/system/platform:unsupported.cc"],
    }),
    hdrs = ["//include/violet:System.h"],
    visibility = ["//visibility:public"],
    deps = [
        "//violet",
        "//violet/container",
        "//violet/filesystem:path",
        "//violet/io:error",
    ],
)

cc_library(
    name = "ci",
    srcs = ["//src/system:ci.cc"],
    hdrs = ["//include/violet/System:CI.h"],
    visibility = ["//visibility:public"],
    deps = [":system"],
)
