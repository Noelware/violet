load("//buildsystem/bazel:cc.bzl", "cc_library", "cc_test")

cc_library(
    name = "macros",
    hdrs = ["//include/violet/Language:Macros.h"],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "policy_checks",
    hdrs = ["//include/violet/Language:Policy.h"],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "violet",
    hdrs = ["//include/violet:Violet.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":macros",
        ":policy_checks",
        "@absl//absl/numeric:int128",
    ],
)

cc_library(
    name = "print",
    hdrs = ["//include/violet:Print.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":violet",
        "//violet/io:descriptor",
    ],
)

cc_library(
    name = "iterator",
    hdrs = ["//include/violet:Iterator.h"],
    visibility = ["//visibility:public"],
    deps = [
        "//violet",
        "//violet/container",
    ],
)

cc_test(
    name = "iterator_test",
    srcs = ["//tests:Iterator.test.cc"],
    deps = [":iterator"],
)

# A "uber" library that contains all base Noelware.Violet libraries and code
cc_library(
    name = "base_uber",
    srcs = ["//:dummy.cc"],
    linkstatic = 0,
    visibility = ["//visibility:public"],
    deps = [
        ":macros",
        ":violet",
        "//violet/container",
        "//violet/iterator:enumerate",
        "//violet/iterator:filter",
        "//violet/iterator:map",
        "//violet/iterator:peekable",
        "//violet/iterator:skip",
        "//violet/iterator:take",
        "//violet/support:bitflags",
        "//violet/support:demangle",
        "//violet/support:terminal",
        "//violet/system",
        "//violet/system:ci",
        "//violet/system:which",
    ],
)
